<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/register_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_wlcm"
                android:textSize="25dp"
                android:textColor="@color/cardview_light_background"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="14dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/regName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="44dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:drawableLeft="@drawable/ic_action_name"
                    android:padding="15dp"
                    android:drawablePadding="5dp"
                    android:background="@drawable/edit_round"
                    android:hint="Name" />

                <EditText
                    android:id="@+id/regUserId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:drawableLeft="@drawable/ic_action_name"
                    android:padding="15dp"
                    android:drawablePadding="5dp"
                    android:background="@drawable/edit_round"
                    android:hint="User Id" />

                <EditText
                    android:id="@+id/regAdmnNo"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:drawableLeft="@drawable/admn"
                    android:padding="15dp"
                    android:drawablePadding="5dp"
                    android:background="@drawable/edit_round"
                    android:hint="Admission No." />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/regClass"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="4dp"
                        android:drawableLeft="@drawable/cls"
                        android:padding="15dp"
                        android:drawablePadding="5dp"
                        android:background="@drawable/edit_round"
                        android:hint="Class" />

                    <EditText
                        android:id="@+id/regRoll"
                        android:layout_width="160dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="14dp"
                        android:drawableLeft="@drawable/roll"
                        android:padding="15dp"
                        android:drawablePadding="5dp"
                        android:background="@drawable/edit_round"
                        android:hint="Roll No." />

                </LinearLayout>

                <EditText
                    android:id="@+id/regPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:drawableLeft="@drawable/lock"
                    android:padding="15dp"
                    android:drawablePadding="5dp"
                    android:background="@drawable/edit_round"
                    android:inputType="textPassword"
                    android:hint="Password" />

                <EditText
                    android:id="@+id/regConfirm"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:drawableLeft="@drawable/lock"
                    android:padding="15dp"
                    android:drawablePadding="5dp"
                    android:background="@drawable/edit_round"
                    android:inputType="textPassword"
                    android:hint="Confirm Password" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="333dp"
                    android:layout_height="50dp"
                    android:padding="15dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="40dp"
                    android:text="Create Profile"
                    android:background="@drawable/button_round"
                    android:onClick="switchToSuccessActivity"
                    android:layout_marginBottom="5px" />

                <Button
                    android:id="@+id/btn_register"
                    android:layout_height="50dp"
                    android:layout_width="333dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="14dp"
                    android:text="Already registered ? Login"
                    android:background="@drawable/notregisterbtn_round"
                    android:onClick="switchToMainActivity" />

            </LinearLayout>

        </FrameLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>